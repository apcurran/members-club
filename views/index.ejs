<%- include("./partials/navbar") %> 
<div class="container">
    <h1>Hello from Index view</h1>
    <% if (typeof errors !== "undefined") { %>
        <% errors.forEach(error => { %>
            <p class="error"><%= error.msg %> <%= error.param %></p>
        <% }); %> 
    <% } %>
    <% if (user) { %>
        <h2>Welcome back <%= user.name %>!</h2>
        <a href="/log-out">LOG OUT</a>
        <main class="main-messages">
            <form action="" class="form-message"></form>
            <section class="messages">
                <ul class="messages__list">
                    <li class="messages__list__item">
                        <h3 class="messages__list__item__author"></h3>
                        <p class="messages__list__item__para"></p>
                        <p class="messages__list__item__date"></p>
                    </li>
                </ul>
            </section>
        </main>
    <% } %> 
</div>
<%- include("./partials/footer") %> 